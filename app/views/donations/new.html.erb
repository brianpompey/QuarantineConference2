<!DOCTYPE html>
<html>
<head>
<style>
</style>
</head>
<body>
<h2>Register for <%= "#{@conference.name}"%> conference</h2>

<% if @donation.errors.any? %>
  <div id="error_explanation">
    <h2>
      Please try again! <%= pluralize(@donation.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @donation.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with url: donations_path, model: Donation.new do |f| %>

    <div>
    <%= f.hidden_field :conference_id, :value => "#{@conference.id}" %>
    </div>

    <div>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>

    <div class="form-group">
    <%= f.label :amount, "Amount:" %>
    <%= f.number_field :amount, :value => "#{@conference.min_donation}" %>
    </div>



    <div class="actions">
    <%= f.submit class:"btn btn-primary" %>
    </div>


<% end %>



</body>
</html>