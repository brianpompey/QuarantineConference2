<!DOCTYPE html>
<html>
<head>
<style>
</style>
</head>
<body>

<%= form_for model: Donation.new do |f| %>

    <div class="form-group">
    <%= f.label :user_id, "Your Name:" %>
    <br>
    <%= f.text_field :name, value: "#{donation.user}" class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :email, "Email:"  %>
    <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password, class: "form-control" %>
    </div>



    <div class="actions">
    <%= f.submit class:"btn btn-primary" %>
    </div>


<% end %>



</body>
</html>