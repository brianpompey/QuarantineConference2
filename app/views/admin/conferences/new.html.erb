<!DOCTYPE html>
<html>
<head>
</head>
<body>
<h1>New Conference</h1>

    <%= form_with model: @conference do |f| %>
        <div class="form-group">
        <%= f.label :name, "Name:" %>
        <br>
        <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.label :date, "Date:" %>
        <br>
        <%= f.date_field :date, class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.label :time, "Time:" %>
        <br>
        <%= f.time_field :time, class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.label :min_donation, "Minimum Donation:" %>
        <br>
        <%= f.number_field :min_donation, class: "form-control" %>dollars
        </div>

        <div class="form-group">
        <%= f.label :keynote, "Keynote:" %>
        <br>
        <%= f.text_field :keynote, class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.label :category, "Category:" %>
        <br>
        <%= f.text_field :category, class: "form-control" %>
        </div><br>

        Workshops:
        <br><br>
        <div class="form-group">
        <%= f.fields_for :workshops do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %><br><br>
 
            <%= f.label :description %>
            <%= f.text_area :description %>
            <br><br>

        <% end %>
       </div><br>

        <div class="actions">
        <%= f.submit class:"btn btn-primary" %>
        </div>

    <% end %>


</body>
</html>